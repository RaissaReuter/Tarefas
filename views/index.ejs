<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Gerenciador de Tarefas</title>
</head>
<body>
    <header>
        <form action="/create" method="post">
            <input type="text" name = "task" id="taskInput" placeholder="Digite uma nova tarefa">
            <button type="submit" id="addTaskButton">Adicionar Tarefa</button>
        </form>

        <form action="/" method="post">
            <input type="text" name = "task" id="taskInput" value="OlÃ¡ Valor">
            <button type="submit" id="addTaskButton">Atualizar</button>
        </form>

    </header>

    <section id="tasks"> 
        <ul>
            <% tasksList.forEach ((task) => {%>
                <li>

                    <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
                    <a href="/getById/<%= task._id %>">Editar</a>
                    <a href="">Apagar</a>
                </li>
            <% }) %>
        </ul>
   </section>
    
    <script src="script.js"></script>
</body>
</html>